{
  "manifest_version": 2,
  "name": "Emotional Peardeck",
  "version": "1.4.3",
  "description": " Katy Peary Happy, Angry 40%, Sad 20%, and Tired 20% of The Time! Adds a Menu to Control Katy Peary's Emotions.",
  "author": "ryanhuang",
  "icons": { "16": "icons/icon16x16.png",
           "48": "icons/icon48x48.png",
          "128": "icons/icon128x128.png" },
  "permissions": [
      "tabs",
      "https://app.peardeck.com/*",
      "webNavigation"
  ],
  "web_accessible_resources": [
    "pears/*.png"
  ],
  "content_scripts": [
    {
        "matches": [
          "https://app.peardeck.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon128x128.png",
    "default_title" : "Emotional Peary",
    "default_popup": "popup.html"
  }
}
